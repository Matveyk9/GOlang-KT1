package main
import (
	"bufio"
	"fmt"
	"os"
	"strconv"
	"strings"
)
func main() {
	reader := bufio.NewReader(os.Stdin)
	fmt.Println("=== Калькулятор ===")
	fmt.Println()
	fmt.Print("Введите первое число: ")
	num1Str, _ := reader.ReadString('\n')
	num1Str = strings.TrimSpace(num1Str)
	num1, err := strconv.ParseFloat(num1Str, 64)
	if err != nil {
		fmt.Println("Ошибка: введено некорректное число")
		return
	}
	fmt.Print("Введите второе число: ")
	num2Str, _ := reader.ReadString('\n')
	num2Str = strings.TrimSpace(num2Str)
	num2, err := strconv.ParseFloat(num2Str, 64)
	if err != nil {
		fmt.Println("Ошибка: введено некорректное число")
		return
	}
	fmt.Println()
	fmt.Println("Выберите операцию:")
	fmt.Println("1. Сложение (+)")
	fmt.Println("2. Вычитание (-)")
	fmt.Println("3. Умножение (*)")
	fmt.Println("4. Деление (/)")
	fmt.Print("Введите знак операции (+, -, *, /): ")
	operationStr, _ := reader.ReadString('\n')
	operation := strings.TrimSpace(operationStr)
	var result float64
	var operationName string
	switch operation {
	case "+":
		result = num1 + num2
		operationName = "Сложение"
	case "-":
		result = num1 - num2
		operationName = "Вычитание"
	case "*":
		result = num1 * num2
		operationName = "Умножение"
	case "/":
		if num2 == 0 {
			fmt.Println()
			fmt.Println("Ошибка: деление на ноль невозможно!")
			return
		}
		result = num1 / num2
		operationName = "Деление"
	default:
		fmt.Println()
		fmt.Println("Ошибка: выбрана неверная операция")
		return
	}
	fmt.Println()
	fmt.Printf("=== Результат ===\n")
	fmt.Printf("%s: %.2f %s %.2f = %.2f\n", operationName, num1, operation, num2, result)
}
